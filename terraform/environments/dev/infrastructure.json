{
    "agent": {
        "metrics_collection_interval": 300,
        "region": "us-east-1",
        "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
    },
    "metrics": {
        "namespace": "${namespace}",
        "append_dimensions": {
            "ImageId": "$${aws:ImageId}",
            "InstanceId": "$${aws:InstanceId}",
            "InstanceType": "$${aws:InstanceType}"
        },
        "metrics_collected": {
            "cpu": {
                "totalcpu": true,
                "measurement": [
                    {"name": "time_active", "rename": "Time-Active_CPU", "unit": "Seconds"},
                    {"name": "time_idle", "rename": "Time-Idle_CPU", "unit": "Seconds"}
                ]
            },
            "disk": {
                "resources": [
                    "*"
                ],
                "measurement": [
                    {"name": "free", "rename": "Free_Disk", "unit": "Bytes"},
                    {"name": "total", "rename": "Total_Disk", "unit": "Bytes"},
                    {"name": "used", "rename": "Used_Disk", "unit": "Bytes"}
                ]
            },
            "diskio": {
                "resources": [
                    "*"
                ],
                "measurement": [
                    {"name": "reads", "rename": "Reads_Diskio", "unit": "Kilobytes/Second"},
                    {"name": "read_time", "rename": "Read-Time_Diskio", "unit": "Kilobytes/Second"},
                    {"name": "writes", "rename": "Writes_Diskio", "unit": "Kilobytes/Second"},
                    {"name": "write_time", "rename": "Write-Time_Diskio", "unit": "Kilobytes/Second"}
                ]
            },
            "mem": {
                "measurement": [
                    {"name": "available", "rename": "Available_Memory", "unit": "Bytes"},
                    {"name": "total", "rename": "Total_Memory", "unit": "Bytes"},
                    {"name": "used", "rename": "Used_Memory", "unit": "Bytes"}
                ]
            }
        }
    }
}