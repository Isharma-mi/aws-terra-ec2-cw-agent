{
    "agent": {
        "metrics_collection_interval": 300,
        "region": "us-east-1",
        "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
    },
    "metrics": {
        "namespace": "Dev/cfn-ec2-cw-agent/All",
        "append_dimensions": {
            "ImageId": "${aws:ImageId}",
            "InstanceId": "${aws:InstanceId}",
            "InstanceType": "${aws:InstanceType}"
        },
        "metrics_collected": {
            "cpu": {
                "totalcpu": true,
                "measurement": [
                    {"name": "time_active", "rename": "TimeActive", "unit": "Seconds"},
                    {"name": "time_idle", "rename": "TimeIdle", "unit": "Seconds"}
                ]
            },
            "disk": {
                "resources": [
                    "*"
                ],
                "measurement": [
                    {"name": "free", "rename": "Free", "unit": "Bytes"},
                    {"name": "total", "rename": "Total", "unit": "Bytes"},
                    {"name": "used", "rename": "Used", "unit": "Bytes"}
                ]
            },
            "diskio": {
                "resources": [
                    "*"
                ],
                "measurement": [
                    {"name": "reads", "rename": "Reads", "unit": "Kilobytes/Second"},
                    {"name": "writes", "rename": "Writes", "unit": "Kilobytes/Second"},
                    {"name": "read_time", "rename": "Read Time", "unit": "Kilobytes/Second"},
                    {"name": "write_time", "rename": "Write Time", "unit": "Kilobytes/Second"}
                ]
            }
        }
    }
}

